list-view, list-view * {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
list-view {
  overflow: auto;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  position: relative;
  height: 100%;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
  display: block;

  .list {
    position: relative;
    transform: translateZ(0);
  }
  .item {
    height: 4em;
    line-height: 2em;
    font-family: 'Fira Sans';
    padding: .5em 0 .5em 1em;
    position: absolute;
    width: 100%;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
    &:hover {
      background: #eee;
    }
  }

  &.scrolling {
    .item {
      pointer-events: none;
    }
  }
}
